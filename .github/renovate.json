{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "configMigration": true,
  "extends": [
    "config:recommended",
    "docker:pinDigests",
    "helpers:pinGitHubActionDigests",
    ":pinDevDependencies",
    ":dependencyDashboard",
    ":semanticPrefixFixDepsChoreOthers",
    "group:monorepos",
    "group:recommended",
    "replacements:all",
    "workarounds:all",
    "regexManagers:dockerfileVersions"
  ],
  "baseBranches": [
    "main"
  ],
  "rebaseWhen": "conflicted",
  "labels": [
    "dependencies"
  ],
  "automergeStrategy": "rebase",
  "packageRules": [
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackagePatterns": [
        "alpine"
      ],
      "separateMinorPatch": true
    },
    {
      "matchManagers": [
        "dockerfile"
      ],
      "matchPackagePatterns": [
        "alpine"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    }
  ]
}
